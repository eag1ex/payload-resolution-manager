{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonJS",
    "target": "es2017",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@root": [
        "libs/index.js"
      ],
      "@prm": [
        "libs/prm"
      ],
      "@xpromise": [
        "libs/xpromise"
      ]
    }
  },
  "lib": [
    "es2017"
  ],
  "include": [
    "libs",
    "examples"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}